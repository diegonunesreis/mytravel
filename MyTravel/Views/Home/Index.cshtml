
@{
    ViewData["Title"] = "Index";
}

<div class="row">
    <div class="col-md-12 col-stick-borders">
        <div class="carousel-stick-borders">
            <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
                <ol class="carousel-indicators">
                    <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                    <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                    <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
                </ol>
                <div class="carousel-inner carousel-height">
                    <div class="carousel-item active">
                        <img class="d-block w-100 carousel-img" src="~/images/assets/travelling-1.jpeg" alt="First slide">
                        <div class="carousel-caption d-none d-md-block">
                            <h5>Find a new a adventure</h5>
                            <p>Choose from our most challenging destinations.</p>
                        </div>
                    </div>
                    <div class="carousel-item">
                        <img class="d-block w-100 carousel-img" src="~/images/assets/travelling-2.jpg" alt="Second slide">
                        <div class="carousel-caption d-none d-md-block">
                            <h5>Direct flights at the best price</h5>
                            <p>We search the best prices among all available airlines.</p>
                        </div>
                    </div>
                    <div class="carousel-item">
                        <img class="d-block w-100 carousel-img" src="~/images/assets/travelling-3.jpg" alt="Third slide">
                        <div class="carousel-caption d-none d-md-block">
                            <h5>Post: Top 10 holiday programs</h5>
                            <p>Our editors listed the top ten destinations for you to enjoy the holidays.</p>
                        </div>
                    </div>
                </div>
                <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>
        </div>
    </div>

</div>

<div class="row">
    <div class="col-md-12">
        <div class="card card-travel">
            <div class="card-body">
                <h5 class="card-title">Where do you wanna go?</h5>

                <div class="form-row">
                    <div class="form-group col-md-6">
                        <label for="inputOrigin">Origin</label>
                        <input type="text" class="form-control" id="inputOrigin" placeholder="São Paulo, Brasil">
                    </div>
                    <div class="form-group col-md-6">
                        <label for="inputDestination">Destination</label>
                        <input type="text" class="form-control" id="inputDestination" placeholder="Insert a city">
                    </div>
                </div>
                <div class="form-row">
                    <div class="col-md-6">
                        <div class="form-row">
                            <div class="form-group col-md-6">
                                <label for="inputDepartureDate">Departure</label>
                                <input type="date" class="form-control" id="inputDepartureDate" placeholder="Insert a city">
                            </div>
                            <div class=" col-md-6">
                                <label for="inputReturnDate">Return</label>
                                <input type="date" class="form-control" id="inputReturnDate" placeholder="Insert a city">
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-row">
                            <div class="form-group col-md-6">
                                <label for="inputPassengersQuantity">How many people?</label>
                                <input type="number" class="form-control" id="inputPassengersQuantity" placeholder="Insert a quantity. Ex: 5">
                            </div>
                            <div class="form-group col-md-6">
                                <label for="inputTravelPlan">Travel Plan</label>
                                <select id="inputTravelPlan" class="form-control">
                                    <option selected>Choose...</option>
                                    <option>modest</option>
                                    <option>complete</option>
                                </select>
                            </div>
                        </div>
                    </div>
                </div>





            </div>
        </div>

    </div>
</div>
